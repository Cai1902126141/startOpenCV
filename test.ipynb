   "source": [
    "import cv2\n",
    "#创建窗口\n",
    "cv2.namedWindow('windows',cv2.WINDOW_NORMAL)\n",
    "#修改窗口大小\n",
    "cv2.resizeWindow('windows',800,600)\n",
    "#展示名字为window的窗口\n",
    "cv2.imshow('windows',0)\n",
    "#等待按键输入，最多delay 5000ms\n",
    "key = cv2.waitKey(0)\n",
    "if key == ord('q'):\n",
    "    print(\"exit\")\n",
    "    cv2.destroyAllWindows()"
   ]
  }
